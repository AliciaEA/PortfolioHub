@model IEnumerable<ProyectoDTO>

@if (Model is not null)
{
    <div class="text-center" style="padding-top: 6rem;">
        <h1>Mis trabajos recientes </h1>

        <p>Aqui puedes ver algunos de mis trabajos mas recientes.</p>

        <div class="container"></div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@proyecto.ImagenURL" class="card-img-top" alt="@proyecto.Titulo">
                        <div class="card-body">
                            <h5 class="card-title"> @proyecto.Titulo </h5>
                            <p class="card-text">@proyecto.Descripcion</p>
                        </div>
                        <div class="card-footer">
                            <a href="@proyecto.Link" class="btn btn-primary" target="_blank" rel="noopener noreferrer">Ver proyecto</a>
                        </div>
                    </div>
                </div>
            }


        </div>

    </div>
}